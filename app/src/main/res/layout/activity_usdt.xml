<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/pay">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:srlHeaderMaxDragRate="2.5"
        app:srlPrimaryColor="@android:color/darker_gray"
        app:srlAccentColor="@android:color/white"
        app:srlEnableLoadMore="false"
        android:layout_below="@+id/back">
        <!--srlHeaderMaxDragRate=2.5时候WaterDropHeader的下拉效果最好-->
        <com.scwang.smartrefresh.header.WaterDropHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/paybackground">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aim_username"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_marginLeft="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入交易用户名"
                        android:layout_weight="8"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:maxLength="16"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <ImageView
                            android:id="@+id/sao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sao1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫一扫"
                            android:textSize="10sp"
                            android:textColor="#E8B979"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="真实姓名："
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"/>
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张 * 航"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="135*****671"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/paybackground"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转账数量"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/edt_sellnum"
                        android:layout_marginLeft="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入USDT数量"
                        android:layout_weight="8"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:maxLength="16"
                        android:inputType="number"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDT"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_error_black_24dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用余额：正在获取..."
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/warnning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用余额不足！"
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:textColor="@color/red_f3323b"
                        android:layout_marginLeft="@dimen/_40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/paybackground"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扣除数量"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/receive_money"
                        android:layout_marginLeft="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="包含3%流通手续费"
                        android:layout_weight="8"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:background="@null" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDT"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/paybackground"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="@color/pay_bacground"
                        android:layout_weight="1"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付密码"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/edt_password"
                        android:layout_marginLeft="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="输入交易密码"
                        android:layout_weight="8"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:maxLength="6"
                        android:inputType="textPassword"/>
                </LinearLayout>


                <Button
                    android:id="@+id/ok"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/receive_bg"
                    android:text="提交"
                    android:textColor="@color/white"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/careful"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:background="@color/grey_a5a5a5"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/pay_bacground"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:background="@color/grey_a5a5a5"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usdt"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:lineSpacingExtra="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey_a5a5a5"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </ScrollView>



    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/arrow"
        android:layout_margin="@dimen/_5dp"/>

</RelativeLayout>